#!/usr/bin/make -f
  
include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/gnome.mk
include /usr/share/cdbs/1/rules/utils.mk
include /usr/share/cdbs/1/rules/patchsys-quilt.mk

DEB_CONFIGURE_EXTRA_FLAGS := \
	--enable-unac \
	--enable-external-qdbm \
	--enable-tracker-search-tool \
	--enable-tracker-preferences \
	--enable-tracker-applet \
	--enable-libvorbis

LDFLAGS += -Wl,--as-needed -Wl,-Bsymbolic

# Enforce tight shlibs dependencies
DEB_DH_MAKESHLIBS_ARGS_ALL := -V
# Don't generate ldconfig calls or shlibs for the plugins.
DEB_DH_MAKESHLIBS_ARGS_tracker := -X/usr/lib/tracker/indexer-modules/ \
                                  -X/usr/lib/tracker/extract-modules/ \
                                  -n
